<div class="text-center ">
<h1 class="text-center", style="font-size:80px;">ログイン</h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field space_top">
    <%= f.label :Eメール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %>
  </div>

  <div class="field space_top">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", :size=>"40" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, :size=>"40"%>
      <%= f.label :ログインを記憶する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
