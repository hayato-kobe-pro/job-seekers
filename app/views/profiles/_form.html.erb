<div class="container">
  <%= nested_form_for @profile do |form| %>
  <% if profile.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(profile.errors.count, "error") %> prohibited this profile
      from being saved:
    </h2>

    <ul>
      <% profile.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= form.hidden_field :user_id %>
  <div class="card input-group">
    <div class="card-header">基本情報</div>

    <div class="card-body">
      <%= form.check_box :is_enable %>
      <span>公開する</span>
      <h5>名前</h5>
      <%= form.text_field :name, :size=>"40", :class => 'form-control' %>
      <h5>生年月日</h5>
      <%= form.date_select :birthday%>

      <h5>住所</h5>
      <%= form.text_area :address,:size => "70x2", :class => 'form-control'  %>

      <h5>プロフィール画像</h5>
      <%= form.file_field :thumbnail  %>

      <h5>自己紹介</h5>
      <%= form.text_area :introduction,:size => "70x7", :class => 'form-control'  %>
    </div>
  </div>
  <div class="card input-group">
    <div class="card-header">
      <h3>記事</h3>
      <span>(ご自由にご記載ください。)</span>
    </div>
    <div class="card-body">
      <%= form.fields_for :articles do |f| %>
      <%= f.hidden_field :user_id, :value => @profile.user_id %>
      <%= f.hidden_field :profile_id, :value => @profile.id %>
      <%= f.select :category, {'ポートフォリオ':'p','受賞歴':'j', '資格':'s'}%><br />
      <%= f.label :タイトル %>
      <br />
      <%= f.text_field :title, :size => "50" %>
       <br />
      <%= f.label :詳細 %>
      <%= f.text_area :text,:size => "70x4", :class => 'form-control'  %>
      <%= f.link_to_remove "削除" %>
      <% end %>
      <%= form.link_to_add "記事追加", :articles %>
    </div>
  </div>
  <div class="card">
    <div class="card-header input-group">
      <h3>経歴</h3>
    </div>
    <div class="card-body">
      <%= form.fields_for :careers do |f| %>
      <%= f.hidden_field :user_id, :value => @profile.user_id %>
      <%= f.hidden_field :profile_id, :value => @profile.id %>
      <%= f.text_field :text, :size => "50" %>
      <%= f.label :date %>
      <%= f.date_field :date %>
      <%= f.link_to_remove "削除" %>
      <% end %>
      <%= form.link_to_add "経歴追加", :careers %>
    </div>

    <div class="actions"><%= form.submit %></div>
  </div>
  <% end %>
</div>